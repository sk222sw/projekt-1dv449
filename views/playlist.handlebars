<h2>{{playlist.title}}</h2>
{{playlist.id}}
<hr />

<ul>
    {{#each tracks}}
        <li>
            {{number}} : 
            <a href={{playlist.id}}?track={{this.number}}>{{title}}</a>
            {{uri}}
        </li>
    {{/each}}
</ul>

<div class="formContainer">
    <h3>add track</h3>
    <form class="trackForm" action="/playlists/{{id}}" method="POST">
        <input type="hidden" name="_csrf" value={{csrf}}></input>
        <div>
            <label for="fieldUrl">Url</label>
            <input type="text" name="fieldUrl" value="https://www.youtube.com/watch?v=hsuK8Th8Ymk"/>
        </div>
            <input type="radio" name="type" value="youtube" checked />YouTube
            <input type="radio" name="type" value="soundcloud" />SoundCloud
        <div>
            <button type="submit">Add</button>
        </div>
    </form>
</div>

<hr />
{{#if showTrack}}
<p id="trackUri">{{track}}</p>
    <div id="soundcloudPlayer"></div>
{{/if}}